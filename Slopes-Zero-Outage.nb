   RowBox[{
    RowBox[{"worstCapacity", "[", 
     RowBox[{"e", ",", "n", ",", "r"}], "]"}], ",", "e"}], "]"}], 
  ";"}], "\[IndentingNewLine]", 
 RowBox[{
  RowBox[{"derivWorst", "[", 
   RowBox[{"e_", ",", " ", "n_", ",", " ", "r_"}], "]"}], ":=", 
  FractionBox[
   RowBox[{
    RowBox[{"-", 
     FractionBox[
      RowBox[{"n", " ", "r", " ", 
       RowBox[{"Log", "[", 
        RowBox[{"1", "-", "e"}], "]"}]}], "e"]}], "+", 
    FractionBox[
     RowBox[{"n", " ", "r", " ", 
      RowBox[{"(", 
       RowBox[{
        RowBox[{"-", "e"}], "-", 
        RowBox[{
         RowBox[{"(", 
          RowBox[{"1", "-", "e"}], ")"}], " ", 
         RowBox[{"Log", "[", 
          RowBox[{"1", "-", "e"}], "]"}]}]}], ")"}]}], 
     SuperscriptBox["e", "2"]]}], 
   RowBox[{
    RowBox[{"Log", "[", "2", "]"}], " ", 
    RowBox[{"(", 
     RowBox[{"1", "-", 
      FractionBox[
       RowBox[{"n", " ", "r", " ", 
        RowBox[{"(", 
         RowBox[{
          RowBox[{"-", "e"}], "-", 
          RowBox[{
           RowBox[{"(", 
            RowBox[{"1", "-", "e"}], ")"}], " ", 
           RowBox[{"Log", "[", 
            RowBox[{"1", "-", "e"}], "]"}]}]}], ")"}]}], "e"]}], 
     ")"}]}]]}]}], "Input",
 CellChangeTimes->{{3.7854318442523737`*^9, 3.785431885329049*^9}, {
  3.78543193583454*^9, 3.7854319398929787`*^9}},
